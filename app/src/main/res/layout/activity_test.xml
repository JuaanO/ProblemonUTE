<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    tools:context="com.problemonute.problemonute.views.TestActivity">
    <data>

        <variable
            name="testVM"
            type="com.problemonute.problemonute.viewmodels.TestViewModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal">
            <io.github.kexanie.library.MathView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@{testVM.question.text}"
                auto:engine="KaTeX" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">
            <io.github.kexanie.library.MathView
                android:id="@+id/answer1"
                android:layout_width="187dp"
                android:layout_height="match_parent"
                android:text="@{testVM.answer1.text}"
                android:gravity="center"
                android:background="@drawable/border_style"
                auto:engine="KaTeX"/>
            <io.github.kexanie.library.MathView
                android:id="@+id/answer2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@{testVM.answer2.text}"
                android:gravity="center"
                android:background="@drawable/border_style"
                auto:engine="KaTeX"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">
            <io.github.kexanie.library.MathView
                android:id="@+id/answer3"
                android:layout_width="187dp"
                android:layout_height="match_parent"
                android:text="@{testVM.answer3.text}"
                android:gravity="center"
                android:background="@drawable/border_style"
                auto:engine="KaTeX"/>
            <io.github.kexanie.library.MathView
                android:id="@+id/answer4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@{testVM.answer4.text}"
                android:gravity="center"
                android:background="@drawable/border_style"
                auto:engine="KaTeX"/>
        </LinearLayout>
    </LinearLayout>
</layout>
